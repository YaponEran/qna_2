var answerErrors = document.querySelector('.answer-errors')
answerErrors.innerHTML = '<%=  render 'shared/errors', resource: @answer %>'

<% if @answer.persisted? %>
  var answers = document.querySelector('.answers')
  answers.insertAdjacentHTML('beforeEnd', '<%= j render @answer %>')

  var answer_input = document.querySelector(".new-answer #answer_body")
  answer_input.value = ""
<% end %>